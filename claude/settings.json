{
  "env": {
    "ENABLE_LSP_TOOL": "1",
    "ENABLE_TOOL_SEARCH": "1"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(diff:*)",
      "Bash(cat:*)",
      "Bash(mkdir:~/**)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(docker compose:*)",
      "Bash(docker compose exec:*)",
      "Bash(docker compose logs:*)",
      "Write(~/**)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm:/)",
      "Bash(rm:/*)",
      "Bash(rm:~)",
      "Bash(rm:~/*)",
      "Bash(mkdir:/**)",
      "Read(.env*)",
      "Read(**/*id_ed25519*)",
      "Read(**/*id_rsa*)",
      "Read(**/*token*)",
      "Read(**/*.pem)",
      "Read(**/*credential*)",
      "Read(**/*secret*)",
      "Write(/**)",
      "Write(**/secrets/**)",
      "Write(.env*)",
      "Write(**/*.pem)",
      "NotebookEdit",
      "NotebookRead",
      "TodoWrite"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(npm install:*)",
      "Bash(npm uninstall:*)",
      "Bash(npm remove:*)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/notify.sh '入力待ちです' default"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/notify.sh 'タスク完了' Pop"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/scripts/context-bar.sh"
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "clangd-lsp@claude-plugins-official": true
  },
  "sandbox": {
    "allowUnsandboxedCommands": true,
    "allowedDomains": [
      "github.com",
      "raw.githubusercontent.com",
      "*.npmjs.org",
      "registry.yarnpkg.com"
    ],
    "deniedDirectories": [
      "~/.ssh",
      "~/.aws",
      "~/.gnupg",
      "~/.config/gh"
    ]
  },
  "plansDirectory": "./.plans"
}
